\section{Glosario Técnico}
\begin{description}
    \item[Atractor] Configuración estable en espacio de estados hacia la cual sistemas tienden a evolucionar
    \item[CCI] Campo de Coherencia Informacional: estructura matemática fundamental
    \item[Kernel de Resonancia] $K(A,B)$: función que mide similitud estructural
\end{description}

\section{Ecuaciones Clave}
\begin{align}
\frac{\partial \psi}{\partial t} &= D\nabla^2\psi - \nabla V(\psi) + \lambda \int K(\psi,\psi')\psi' d\mu \\
K(A,B) &= \exp(-\|\nabla\phi(A) - \nabla\phi(B)\|^2 / 2\sigma^2) \cdot H(A,B)
\end{align}

