% ====================== 3. ECUACIONES FUNDAMENTALES ======================
\section{Ecuaciones Fundamentales}

\subsection{Ecuación Maestra del CCI}
\begin{equation}
\boxed{
\frac{\partial \psi}{\partial t} = 
\underbrace{D \nabla^2 \psi}_{\text{Difusión}} 
- \underbrace{\nabla V(\psi)}_{\text{Potencial Local}} 
+ \underbrace{\lambda \int K(\psi,\psi')\psi'(t)\,d\mu(\psi')}_{\text{Resonancia No-Local}}
}
\label{eq:maestra}
\end{equation}

\subsection{Kernel de Resonancia}
\begin{equation}
K(A,B) = \exp\left(-\frac{\|\nabla\phi(\psi_A) - \nabla\phi(\psi_B)\|^2}{2\sigma^2}\right) \cdot H(A,B)
\end{equation}
donde:
\[
H(A,B) = \frac{|\psi_A \cap \psi_B|}{|\psi_A \cup \psi_B|}
\]

\subsection{Potencial Informacional}
\begin{equation}
\phi(\psi) = -\log\left[ \sum_m s(m) \cdot \exp\left(-\frac{d(\psi,m)^2}{2\sigma^2}\right) \right]
\end{equation}

% ====================== 4. PREDICCIONES VERIFICABLES ======================
\section{Predicciones Verificables}

\subsection{Experimento I: Cristalización Sincronizada}
\textbf{Hipótesis:} Sistemas idénticos aislados cristalizarán con correlación temporal mayor que azar.

\textbf{Protocolo:}
\begin{enumerate}
    \item Preparar 100 soluciones saturadas de acetato de sodio (idénticas)
    \item Colocarlas en 100 ubicaciones geográficas distintas (> 100 km separación)
    \item Aislamiento completo: cajas de Faraday, aislamiento térmico/acústico
    \item Monitorear tiempo exacto de cristalización para cada muestra
    \item Análisis estadístico de correlaciones temporales
\end{enumerate}

\textbf{Predicción CCI:} $\rho \approx 0.02 - 0.05$ ($p < 0.001$) \\
\textbf{Costo estimado:} \$15,000 \quad | \quad \textbf{Tiempo:} 4 meses

